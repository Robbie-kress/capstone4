@{ 
    ViewData["Title"] = "AddToDoList";
}

<h1>Add item to the To Do List</h1>

<form asp-action="AddToDoList" method="post">
    <input type="number" name="ToDoListId" placeholder="Id" class="form-control mb-4"/>
    <input type="text"  name="TaskDescription" placeholder="Task Description" class="form-control mb-4"/>
    <input type="date" name="DueDate" placeholder="Due Date" class="form-control mb-4"/>
    <input type="text" name="UserId" placeholder="User Id" class="form-control mb-4"/>
    
    
    <div class="form-control mb-4">
        Complete? <input type="checkbox" name="Complete" value="true"/>
        <input type="checkbox" name="Complete" value="false" hidden/>
    </div>
    <input type="submit" value="Add this Task and Assign Person" class="form-control mb-4"/>
    
</form>